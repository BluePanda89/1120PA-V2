---
import { facilitiesData } from '@data/facilities';
---

<section id="facilities" class="py-24 bg-white overflow-hidden">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-4xl font-bold text-slate-900 mb-4 tracking-tight">Resident Facilities</h2>
      <div class="h-1.5 w-16 bg-blue-600 mx-auto rounded-full"></div>
      <p class="mt-6 text-slate-600 max-w-2xl mx-auto text-lg leading-relaxed">
        1120 Park Avenue offers a wide range of lifestyle amenities designed to foster a healthy and active community.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      {facilitiesData.map((item) => (
        <div 
          class="group p-8 bg-slate-50 rounded-3xl border border-slate-100 hover:bg-white hover:border-blue-100 hover:shadow-2xl hover:shadow-blue-500/10 transition-all duration-500"
          data-aos="fade-up"
          data-aos-delay={item.delay}
        >
          <div class="text-5xl mb-6 transform group-hover:scale-110 transition-transform duration-300 inline-block">
            {item.icon}
          </div>
          <h3 class="text-2xl font-bold text-slate-900 mb-3">{item.title}</h3>
          <p class="text-slate-600 leading-relaxed">
            {item.desc}
          </p>
          <div class="mt-6 flex items-center text-blue-600 font-semibold text-sm opacity-0 group-hover:opacity-100 transition-opacity">
            Learn more 
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>